@{
    ViewData["Title"] = "Pacientes";
}
<head>
    <link rel="stylesheet" href="~/css/pacientes.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<h1 class="display-6 text-center fw-bold">
    <i class="bi bi-people"></i>
    Pacientes
</h1>
<br />
<div class="container-fluid px-4">
    <div class="border border-secondary rounded p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 text-coffee fw-bold mb-0">
                <i class="bi bi-table"></i>
                Registro de Pacientes
            </h1>
            <button type="button" class="btn btn-success btn-lg" data-bs-toggle="modal" onclick="MostrarModal()">
                <i class="bi bi-person-plus"></i>
                Nuevo Paciente
            </button>
        </div>
    </div>
    <br />
    <div class="modal fade" id="modalPaciente" tabindex="-1" aria-labelledby="modalPacienteLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="background: linear-gradient(to bottom, skyblue, white); border-radius: 10px;">
                <div class="modal-header border-bottom">
                    <h5 class="modal-title fs-5 text-coffee">
                        <i class="bi bi-building me-2"></i>Gestionar Paciente
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body p-4">
                    <form id="frmPaciente" method="post" class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee" id="id"
                                       name="id" readonly>
                                <label for="id" class="text-muted">ID PACIENTE</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee" id="nombre"
                                       name="nombre" required>
                                <label for="nombre" class="text-muted">Nombre</label>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee" id="apellido"
                                       name="apellido" required>
                                <label for="apellido" class="text-muted">Apellido</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="date" class="form-control border-coffee" id="fechaNacimiento"
                                       name="fechaNacimiento">
                                <label for="fechaNacimiento" class="text-muted">Fecha de Nacimiento</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee" id="telefono"
                                       name="telefono">
                                <label for="telefono" class="text-muted">Telefono</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control border-coffee" id="email"
                                       name="email">
                                <label for="email" class="text-muted">email</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee" id="direccion"
                                       name="direccion">
                                <label for="direccion" class="text-muted">Dirección</label>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer border-top">
                    <button type="button" class="btn btn-outline-warning" onclick="LimpiarPaciente()">
                        <i class="bi bi-eraser me-2"></i>Limpiar
                    </button>
                    <button type="button" class="btn btn-success" onclick="GuardarPaciente()">
                        <i class="bi bi-save me-2"></i>Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="card border-0 shadow">
        <div class="card-header  text-dark py-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-heart-pulse"></i>
                Listado de Pacientes
            </h5>
        </div>
        <div class="card-body p-0 bg-light-coffee">
             <div id="divContenedorTabla" class="rounded-3"></div>
        </div>
    </div>
</div>
<!-- Incluir scripts: primero el genérico, luego el de Pacientes -->
<script src="~/js/generico.js"></script>
<script src="~/js/pacientes.js"></script>